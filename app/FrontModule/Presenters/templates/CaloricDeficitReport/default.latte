{block content}

<div class="monthly-report-class">
    <h1>Caloric Deficit {$year}</h1>
    <table id="caloric-deficit-table">
        <tr>
            {foreach $months as $number => $month}
                <td><b>{$month}</b></td>
            {/foreach}
        </tr>
        <tr>
            {foreach $months as $number => $month}
                <td>{$numberOfRecords[$number]}/{$d=cal_days_in_month(CAL_GREGORIAN, $number,  $year)}</td>
            {/foreach}
        </tr>
        <tr>
            {foreach $months as $number => $month}
                <td>{number_format($totalData[$number], 0, '', ' ')} kcal</td>
            {/foreach}
        </tr>
    </table>
</div>
